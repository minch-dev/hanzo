		"*://*.youtube.com/*"
		//"<all_urls>",
	],
	"icons": {
		"16": "icons/16.png",
		"19": "icons/19.png",
		"32": "icons/32.png",
		"36": "icons/36.png",
		"48": "icons/48.png",
		"64": "icons/64.png",
		"128": "icons/128.png"
	},
    "action": {
		"default_icon": {
			"16": "icons/16.png",
			"19": "icons/19.png",
			"32": "icons/32.png"
		},
